#include<stdio.h>
int main()
{ int array[50],i,n;
 printf("enter number of elements in array:\n");
 scanf("%d",&n);
 
 printf("enter elements of array:\n");
 for(i=0;i<n;i++)
 { scanf("%d",&array[i]);
 }
 
 printf("elements of array:\n");
 for(i=0;i<n;i++)
 { printf("%d\n",array[i]);
 }
 
 printf("elements of array after reversing:\n");
 for(i=n-1;i>=0;i--)
 { printf("%d\n",array[i]);
 }

 return 0;
 }
